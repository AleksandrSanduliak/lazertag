{
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "target": "es2020",
    "checkJs": true,
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "react": [
        "node_modules/@types/react"
      ],
      "src": [
        "src"
      ],
      "store/*": [
        "src/store/*"
      ],
      "styles/*": [
        "src/styles/globalStyles/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "modules/*": [
        "src/components/modules/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.jsx",
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src",
    "declaration.d.ts"
  ],
}